<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Les potins de THP">
    <meta name="author" content="LN A.">
    <link rel="stylesheet" type="text/css" href="/css/all_gossips.css">
    <title>Les potins à THP</title>
  </head>
  <body>
    <div>
      <table>
        <caption>Voici la liste des potins qui circulent...</caption>
        <thead>
          <tr>
            <th>Auteur</th>
            <th>Contenu</th>
            <th>Page</th>
          </tr>
        </thead>
        <tbody>
          <% gossips.each_with_index do |gossip, index| %>
            <tr>
              <td><%= gossip.author %></td>
              <td><%= gossip.content %></td>
              <% id = index + 1 %>
              <% link = "<a href=\"../../gossips/#{id}/\">Potin n°#{id}</a>" %>
              <td><%= link %></td>
            </tr>
          <% end %>
        </tbody>
    </div>
    <div>
      <p><a href="/">Retour à l'accueil</a></p>
    </div>
  </body>
</html>
